extends layout

block content
	script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
	script(src='https://ajax.googleapis.com/ajax/libs/threejs/r76/three.min.js')
	section#hero.pos-relative.height-30.unpad.parallax(data-overlay="9")
		.orb-container.no-max-height
			script(src="/js-extra/orbZilla.js")
		.background-image-holder
			//-.slider(data-arrows='false', data-paging='false')
				ul.slides
					for image in contentful.Home[0].headerBackgrounds
						li.unpad.imagebg.parallax
			img(src="#{asset(contentful.partners[0].header)}")

		.container.pos-vertical-center
			.row.text-center
				.col-sm-12
					h1.color--white= contentful.partners[0].title


	section.bg--lightgray
		.container
			.row.text-center
				.col-sm-12
					h3= contentful.partners[0].intro.fields.subhead
				.col-sm-8.col-sm-offset-2
					p= contentful.partners[0].intro.fields.body
	if contentful.partners[0].partners.length > 0
		section
			.container
				for item in contentful.partners[0].partners
					.row
						.col-sm-4
							if item.fields.website != undefined
								a(href="#{item.fields.website}")
									img(src="#{asset(item.fields.logo)}")
							else
								img(src="#{asset(item.fields.logo)}")
						if item.fields.name != undefined || item.fields.description != undefined
							.col-sm-8
								if item.fields.name != undefined
									h4= item.fields.name
								if item.fields.description != undefined
									p= item.fields.description
